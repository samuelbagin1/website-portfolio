{
    "version": 2,
    "builds": [
      {
        "src": "src/api/*.js",
        "use": "@vercel/node"
      },
      {
        "src": "src/index.js",
        "use": "@vercel/static-build"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/src/api/$1",
        "headers": {
          "Cache-Control": "no-cache"
        }
      },
      {
        "src": "/(.*)",
        "dest": "/src/index.js",
        "headers": {
          "Cache-Control": "public, max-age=31536000, immutable"
        }
      }
    ]
  }